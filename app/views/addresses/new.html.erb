<h1>New Contact</h1>

<%= form_for :address, url: addresses_path do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :Phone_Number %><br>    <!--displays as "Phone number" not "Phone Number", we need the 2nd option-->
    <%= f.text_field :Phone_Number %>
  </p>
  
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  
    <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
<%= link_to 'Back', addresses_path %>